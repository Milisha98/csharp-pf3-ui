<input id="@id" type="text" class="@Class" style="@Style" @bind:event="oninput" @bind="@Text" @onchange="@OnChange" />

@code {

    private string _text = 0.ToString("c0");
    private decimal _amount = 0m;

    [Parameter]
    public string Text
    {
        get => _text;
        set
        {
            _text = value;
            _amount = value.ToDecimal();
        }
    }
    
    [Parameter]    
    public decimal Amount
    {
        get => _amount;
        set
        {
            _amount = value;
            _text = value.ToString("c0");
        }
        
    }

    [Parameter]
    public string id { get; set; } = "";

    [Parameter]
    public string Class { get; set; } = "";

    [Parameter]
    public string Style { get; set; } = "";

    [Parameter]
    public EventCallback<ChangeEventArgs> OnChange { get; set; }

}